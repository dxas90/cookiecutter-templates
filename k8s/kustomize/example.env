# Sample environment file for Kustomize configuration generation
# This file demonstrates the KEY=VALUE format supported

# Application settings
app_name=my-app
app_version=v1.0.0
description=My Kubernetes application
image_repository=my-registry/my-app
image_tag=latest
replicaCount=3

# Resource configuration
resources_limits_cpu=100m
resources_limits_memory=256Mi
resources_requests_cpu=50m
resources_requests_memory=128Mi

# Service configuration
service_type=ClusterIP
service_port=8080
container_port=8080

# HTTPRoute configuration
httproute_enabled=true
httproute_hostname=my-app.example.com
httproute_gateway_name=gateway
httproute_gateway_namespace=gateway-system

# Persistence configuration
persistence_enabled=true
persistence_capacity=1Gi
persistence_storageClass=fast-ssd

# Autoscaling configuration
autoscaling_enabled=true
autoscaling_minReplicas=2
autoscaling_maxReplicas=10
autoscaling_targetCPUUtilizationPercentage=70

# Health check configuration
healthcheck_enabled=true
healthcheck_path=/health
healthcheck_initialDelaySeconds=30
healthcheck_timeoutSeconds=5

# Security configuration
security_fsGroup=1000
security_runAsNonRoot=true

# Labels
app_label=my-app
owner_label=platform-team
team_label=DevOps

# Networking
networkpolicy_enabled=true
poddisruptionbudget_enabled=true

# Environment variables (will be added to ConfigMap)
DATABASE_URL=postgresql://db:5432/myapp
REDIS_URL=redis://redis:6379
LOG_LEVEL=info
APP_DEBUG=false
